<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".JulesApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_octopus"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_octopus"
        android:supportsRtl="true"
        android:theme="@style/Theme.Octopus">

        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/menu_settings"
            android:theme="@style/Theme.Octopus"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/menu_about"
            android:theme="@style/Theme.Octopus"
            android:parentActivityName=".MainActivity" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.OnboardingActivity"
            android:label="@string/title_onboarding"
            android:theme="@style/Theme.Octopus" />

        <activity
            android:name=".ui.CreateTaskActivity"
            android:label="@string/title_create_task"
            android:theme="@style/Theme.Octopus"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.TaskDetailActivity"
            android:label="@string/title_task_detail"
            android:theme="@style/Theme.Octopus" />

    </application>

</manifest>
