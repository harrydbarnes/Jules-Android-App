<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp"
    app:cardCornerRadius="28dp"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Jules.LargeComponent"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/statusChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reasoning"
                android:textColor="@color/black"
                app:chipBackgroundColor="@color/jules_purple_light"
                style="@style/Widget.Material3.Chip.Assist"
                app:chipStrokeWidth="0dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/sourceChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Source"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/dateChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="19th Jan"
                style="@style/Widget.Material3.Chip.Assist" />
        </LinearLayout>

        <TextView
            android:id="@+id/sessionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Session Title"
            android:textAppearance="?attr/textAppearanceTitleLarge"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/sessionPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Session prompt details..."
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?android:attr/textColorSecondary" />

        <View
            android:id="@+id/pulseView"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/pulse_gradient"
            android:alpha="0.7"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
