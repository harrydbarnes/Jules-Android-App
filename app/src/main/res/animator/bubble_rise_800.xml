<objectAnimator xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="4000"
    android:startOffset="800"
    android:repeatCount="infinite"
    android:repeatMode="restart"
    android:interpolator="@android:anim/linear_interpolator">

    <propertyValuesHolder android:propertyName="translateY" android:valueType="floatType">
        <keyframe android:fraction="0" android:value="0"/>
        <keyframe android:fraction="1" android:value="-100"/>
    </propertyValuesHolder>

    <propertyValuesHolder android:propertyName="alpha" android:valueType="floatType">
        <keyframe android:fraction="0" android:value="0"/>
        <keyframe android:fraction="0.2" android:value="0.6"/>
        <keyframe android:fraction="0.8" android:value="0.6"/>
        <keyframe android:fraction="1" android:value="0"/>
    </propertyValuesHolder>

</objectAnimator>