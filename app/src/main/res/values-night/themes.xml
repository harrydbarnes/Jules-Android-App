<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Octopus" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/jules_purple_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/jules_purple_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Surface & Background -->
        <item name="android:colorBackground">@color/octopus_midnight</item>
        <item name="colorSurface">@color/octopus_surface</item>
        <item name="colorOnSurface">@color/octopus_white</item>
        <item name="colorSurfaceVariant">@color/octopus_surface</item>
        <item name="colorOnSurfaceVariant">@color/octopus_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/jules_purple_dark</item>
    </style>

    <style name="Theme.JulesLoader" parent="Theme.Octopus" />

    <style name="Theme.Squid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ivory</item>
        <item name="colorOnPrimary">@color/pitch_black</item>
        <item name="colorPrimaryContainer">@color/ivory</item>
        <item name="colorOnPrimaryContainer">@color/pitch_black</item>

        <!-- Surface & Background -->
        <item name="android:colorBackground">@color/pitch_black</item>
        <item name="colorSurface">@color/pitch_black</item>
        <item name="colorOnSurface">@color/squid_white</item>
        <item name="colorSurfaceVariant">@color/pitch_black</item>
        <item name="colorOnSurfaceVariant">@color/squid_white</item>

        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Octopus.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Octopus.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Octopus.LargeComponent</item>

        <!-- Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.Squid.DisplayLarge</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ivory</item>
        <item name="colorOnSecondary">@color/pitch_black</item>
        <item name="colorSecondaryContainer">@color/ivory</item>
        <item name="colorOnSecondaryContainer">@color/pitch_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pitch_black</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/pitch_black</item>
    </style>
</resources>
