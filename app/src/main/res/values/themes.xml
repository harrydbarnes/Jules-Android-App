<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with common attributes -->
    <style name="Theme.Jules.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Jules.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Jules.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Jules.LargeComponent</item>

        <!-- Menu Popup -->
        <item name="actionBarPopupTheme">@style/ThemeOverlay.Material3.Dark</item>

        <!-- Dynamic Text Colors -->
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Octopus" parent="Theme.Jules.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/jules_purple</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/jules_purple_light</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <!-- Surface & Background -->
        <item name="android:colorBackground">@color/octopus_midnight</item>
        <item name="colorSurface">@color/octopus_surface</item>
        <item name="colorOnSurface">@color/octopus_white</item>
        <item name="colorSurfaceVariant">@color/octopus_surface</item>
        <item name="colorOnSurfaceVariant">@color/octopus_white</item>

        <!-- Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.Octopus.DisplayLarge</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/octopus_midnight</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/octopus_midnight</item>
    </style>

    <style name="ShapeAppearance.Jules.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Jules.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ShapeAppearance.Jules.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="TextAppearance.Octopus.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/jules_purple_light</item>
    </style>

    <!-- Alias for backward compatibility if needed, though we update Manifest -->
    <style name="Theme.JulesLoader" parent="Theme.Octopus" />

    <style name="Theme.Squid" parent="Theme.Jules.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ivory</item>
        <item name="colorOnPrimary">@color/pitch_black</item>
        <item name="colorPrimaryContainer">@color/ivory</item>
        <item name="colorOnPrimaryContainer">@color/pitch_black</item>

        <!-- Surface & Background -->
        <item name="android:colorBackground">@color/pitch_black</item>
        <item name="colorSurface">@color/pitch_black</item>
        <item name="colorOnSurface">@color/ivory</item>
        <item name="colorSurfaceVariant">@color/pitch_black</item>
        <item name="colorOnSurfaceVariant">@color/ivory</item>

        <!-- Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.Squid.DisplayLarge</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ivory</item>
        <item name="colorOnSecondary">@color/pitch_black</item>
        <item name="colorSecondaryContainer">@color/ivory</item>
        <item name="colorOnSecondaryContainer">@color/pitch_black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/pitch_black</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/pitch_black</item>
    </style>

    <style name="TextAppearance.Squid.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/ivory</item>
    </style>
</resources>
